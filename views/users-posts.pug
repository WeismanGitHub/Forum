extends layout
block content
    if thereArePosts
        h1 #{user.name}'s Posts:
        each post in posts
            ul
                li= br
                div(class='post')
                    h2
                        a(href='/posts/' + post._id) #{post.title}
                    h3 #{post.body}
    else
        h1 #{user.name} has no posts.